"(specifications->manifest\n"
"  (list \"r-minimal\"\n"
"\n"

#. type: lisp
#: guix-git/doc/guix-cookbook.texi:2874
#, no-wrap
msgid ""
"        ;; base packages\n"
"        \"bash-minimal\"\n"
"        \"glibc-locales\"\n"
"        \"nss-certs\"\n"
"\n"
msgstr ""
"        ;; grundlegende Pakete\n"
"        \"bash-minimal\"\n"
"        \"glibc-locales\"\n"
"        \"nss-certs\"\n"
"\n"

#. type: lisp
#: guix-git/doc/guix-cookbook.texi:2881
